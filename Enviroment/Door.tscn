var targetPos : Vector2;
var initPos : Vector2;
export var InitialOpen = false;
export var ID = -1;

var IsOpen;

# Called when the node enters the scene tree for the first time.
func _ready():
	add_to_group(\"doors\");
	initPos = self.position;
	SetOpen(InitialOpen);



func _process(delta):
	if(self.position != targetPos):
		if position.distance_to(targetPos) < delta *10:
			position = targetPos
		else:
			position += position.direction_to(targetPos).normalized()*delta*10;



func SetOpen(open):
	IsOpen = open;
	if open:
		targetPos = initPos+Vector2(0,80).rotated(self.rotation);
	else:
		targetPos = initPos;
